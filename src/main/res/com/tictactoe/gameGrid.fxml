<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:controller="com.tictactoe.Controller" stylesheets="/com/tictactoe/gameGrid.css" xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <Menu text="Game" mnemonicParsing="false">
                <Menu text="New" mnemonicParsing="false">
                    <MenuItem text="1 Player" onAction="#new1PlayerGame" mnemonicParsing="false"/>
                    <MenuItem text=" Player" onAction="#new2PlayerGame" mnemonicParsing="false"/>
                </Menu>
                <MenuItem text="Open" mnemonicParsing="false" onAction="#openGame"/>
                <MenuItem text="Save" mnemonicParsing="false" onAction="#saveGame"/>
            </Menu>
            <Menu text="Changes" mnemonicParsing="false">
                <MenuItem text="Undo" mnemonicParsing="false" onAction="#undoChange"/>
                <MenuItem text="Redo" mnemonicParsing="false" onAction="#redoChange"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <GridPane>
            <Button mnemonicParsing="false" fx:id="gridButton00" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton01"  GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton02"  GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton10"  GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton11"  GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton12"  GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton20"  GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton21"  GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="gridButton"
                    onAction="#gridClick"/>
            <Button mnemonicParsing="false" fx:id="gridButton22"  GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="gridButton"
                    onAction="#gridClick"/>
        </GridPane>
    </center>
</BorderPane>